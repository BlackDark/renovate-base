{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "regexManagers:githubActionsVersions",
    "schedule:monthly",
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "pin"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": ["dependencies"],
      "semanticCommitType": "refactor"
    }
  ]
}
